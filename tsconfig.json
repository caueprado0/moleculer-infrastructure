{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
     "lib": ["es6"],
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "strictNullChecks": false,
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "@moleculer/*": ["./src/infrastructure/moleculer/*"],
      "@api/*": ["./src/api/*"],
      "src/*": [
        "./src/*"
      ]
    },
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
